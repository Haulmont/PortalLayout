<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 1.7.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/1.7.0/distro-source/core/src/gwt-module.dtd">
<module>
	<inherits name="com.vaadin.terminal.gwt.DefaultWidgetSet" />
	
    <!--<set-property name="user.agent" value="gecko1_8"/>-->
	  
	<stylesheet src="PortalLayout/portallayout.css"/>


	<replace-with
		class="org.vaadin.sasha.portallayout.client.dnd.util.impl.DOMUtilImplOpera">
		<when-type-is class="org.vaadin.sasha.portallayout.client.dnd.util.impl.DOMUtilImpl" />
		<when-property-is name="user.agent" value="opera" />
	</replace-with>

	<replace-with
		class="org.vaadin.sasha.portallayout.client.dnd.util.impl.DOMUtilImplSafari">
		<when-type-is class="org.vaadin.sasha.portallayout.client.dnd.util.impl.DOMUtilImpl" />
		<when-property-is name="user.agent" value="safari" />
	</replace-with>

	<replace-with class="org.vaadin.sasha.portallayout.client.dnd.util.impl.DOMUtilImplIE6">
		<when-type-is class="org.vaadin.sasha.portallayout.client.dnd.util.impl.DOMUtilImpl" />
		<any>
			<when-property-is name="user.agent" value="ie6" />
      <when-property-is name="user.agent" value="ie8" />
      <when-property-is name="user.agent" value="ie9" />
		</any>
	</replace-with>

	<replace-with
		class="org.vaadin.sasha.portallayout.client.dnd.util.impl.DOMUtilImplMozilla">
		<when-type-is class="org.vaadin.sasha.portallayout.client.dnd.util.impl.DOMUtilImpl" />
		<when-property-is name="user.agent" value="gecko1_8" />
	</replace-with>

    <inherits name="org.vaadin.rpc.WidgetRPC" />

    <inherits name="org.vaadin.youtubeplayer.YouTubePlayerWidgetset" />

    <inherits name="org.vaadin.swfobject.SwfobjectWidgetset" />

    <inherits name="org.vaadin.codelabel.CodelabelWidgetset" />

    <inherits name="org.vaadin.teemu.ratingstars.gwt.RatingStarsWidgetset" />

</module>
